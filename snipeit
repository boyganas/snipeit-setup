server {
    listen 80;

    server_name _;

    root   /data/www/snipeit/public;
    index  index.php index.html index.htm;

    listen 443 http2 ssl;
    ssl_certificate /etc/ssl/certs/seeddms.crt;
    ssl_certificate_key /etc/ssl/private/seeddms.key;

    access_log /var/log/nginx/snipeit.access.log;
    error_log /var/log/nginx/snipeit.error.log;

    charset utf-8;
    gzip on;
    gzip_types text/css application/javascript text/javascript application/x-javascript  image/svg+xml text/plain text/xsd text/xsl text/xml image/x-icon;

    location / {
    try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$ {
         include snippets/fastcgi-php.conf;
         fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
         include fastcgi_params;
         fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
         fastcgi_intercept_errors on;
    }

    location ~ /\.ht {
            deny all;
    }
}
